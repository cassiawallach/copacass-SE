<apex:page standardController="DecsOnD__Policy__c" sidebar="false">
    <apex:stylesheet value="{!URLFOR($Resource.DecsOnD__JS_Callbacks, '/css/decsond-sfdc-wrapper.css')}"/>
    <apex:includeScript value="{!URLFOR($Resource.DecsOnD__JS_Callbacks, '/sfdcWrapper.js')}"/>
    <apex:includeLightning />
    <div id="lightning"/>
    <script>
        $Lightning.use(
            "DecsOnD:NewPolicy_Container",
            function () {
                $Lightning.createComponent(
                    "DecsOnD:NewPolicy_EnterDetails",
                    {
                        classic: true,
                        templateName: "{!JSINHTMLENCODE($CurrentPage.parameters.DecsOnD__templateName)}",
                        description: "{!JSINHTMLENCODE($CurrentPage.parameters.DecsOnD__templateDescription)}",
                        documentation: "{!JSINHTMLENCODE($CurrentPage.parameters.DecsOnD__templateDocumentation)}",
                        sobjectName: "{!JSINHTMLENCODE($CurrentPage.parameters.DecsOnD__sobjectName)}",
                        actionName:  "{!JSINHTMLENCODE($CurrentPage.parameters.DecsOnD__actionName)}",
                        policyId:  "{!JSINHTMLENCODE($CurrentPage.parameters.DecsOnD__policyId)}"
                    },
                    "lightning",
                    createComponentHandler);
            });
    </script>
</apex:page>