<apex:page standardController="Lead" extensions="TracHier.HierarchyLWCinVFPageCtlrExtension" showHeader="false" sidebar="false" title="Traction Hierarchies" lightningStylesheets="true" standardStylesheets="false">

    <apex:includeLightning />
    <div id="HierarchyLWCinVFPid" />

    <script>
        if ({!enableLWCForVFP}){
            $Lightning.use("TracHier:HierarchyVFP", function() {
                $Lightning.createComponent("TracHier:hierarchy",
                    {
                        recordId: "{!$CurrentPage.parameters.id}"
                    },
                    "HierarchyLWCinVFPid",
                    function(cmp) {
                        console.log('LWC Component added in VF page {!$CurrentPage.parameters.id}');
                    });
            });
        }
    </script>

    <c:Hierarchy recordId="{!Lead.Id}" rendered="{!NOT(enableLWCForVFP)}"/>

</apex:page>