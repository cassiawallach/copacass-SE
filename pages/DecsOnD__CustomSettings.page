<apex:page setup="true">
    <apex:includeScript value="{!URLFOR($Resource.DecsOnD__JS_Callbacks, '/sfdcWrapper.js')}"/>
    <apex:includeLightning />
    <style type="text/css">
        .remoteSites {
            border-radius: 4px;
            border-width: 1px;
            border-style: solid;
            padding-left: 5px;
            margin: 8px 0 8px 0;
        }
    </style>
    <apex:outputPanel >
        <div class="remoteSites">
            <c:RemoteSitesWhitelistingModal rendered="true"
                    redirectAfter="true"/>
        </div>
    </apex:outputPanel>
    <div id="lightningMessages"></div>
    <div id="lightning"></div>
    <script>
        $Lightning.use(
            "DecsOnD:LightningOutContainerMainSetup",
            function () {
                $Lightning.createComponent(
                    "DecsOnD:mainSetup",
                    {
                        classic: true
                    },
                    "lightning",
                    addErrorHandlers);
            });
    </script>
</apex:page>