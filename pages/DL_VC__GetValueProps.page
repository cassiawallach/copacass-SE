<!--
Description: This VF Page lets you add the Value Proposition associated with the account to the Salesforce record.
-->
<apex:page controller="DL_VC.GetValuePropsController" docType="html-5.0" lightningStylesheets="true">
    <head>
        <apex:slds />
    </head>
    <body>
        <apex:form >
            <apex:pageBlock title="Value Propositions" id="vp_list">
                <apex:pageBlockTable value="{! valueProps }" var="vp">
                    <apex:column >
                        <apex:commandLink value="Add" action="{! addValueProposition }">
                            <apex:param name="Opp_To_Add" value="{! vp.VC_Value_Prop_Id__c }"
                                        assignTo="{! Opp_To_Add }"/>
                        </apex:commandLink>
                    </apex:column>
                    <apex:column value="{! vp.Name }" headerValue="Name"/>
                </apex:pageBlockTable>
                <apex:pageBlockSection >
                    <!--<apex:inputText value="{!url}"/>-->
                    <apex:commandButton action="{! PreviousPage }" value="Close"/>
                    <apex:commandButton action="{! GoToAccount }" value="Go To Account" disabled="{! acct_disabled}"/>
                </apex:pageBlockSection>
            </apex:pageBlock>
            <apex:pageBlock >
                <apex:pageBlockSection >
                    <apex:pageMessages >
                    </apex:pageMessages>
                </apex:pageBlockSection>
            </apex:pageBlock>
        </apex:form>
    </body>
</apex:page>